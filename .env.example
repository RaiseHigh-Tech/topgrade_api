# Django Settings
SECRET_KEY=your_secret_key_here
DEBUG=True

# Database Configuration
USE_POSTGRES=False
DB_NAME=topgrade_db
DB_USER=postgres
DB_PASSWORD=your_db_password
DB_HOST=localhost
DB_PORT=5432

# Email Configuration - REQUIRED for OTP functionality
EMAIL_HOST_USER=noreply@topgradeinnovations.com
EMAIL_HOST_PASSWORD=your_gmail_app_password_here

# Celery Configuration - REQUIRED for background tasks
CELERY_BROKER_URL=redis://localhost:6379/0

# AWS S3 Configuration (Optional - for file storage)
USE_S3=False
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_STORAGE_BUCKET_NAME=your_bucket_name
AWS_S3_REGION_NAME=ap-south-1

# CloudFront CDN (Optional)
USE_CLOUDFRONT=False
AWS_CLOUDFRONT_DOMAIN=your_cloudfront_domain

# Firebase Configuration (Optional - for phone auth)
FIREBASE_CREDENTIALS_PATH=firebase-credentials.json
